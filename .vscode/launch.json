{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "env": {
        "NODE_ENV": "test",
        "JWT_SECRET": "secret",
      },
      "args": [
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register",
          //"--timeout",
          //"999999",
          "--colors",
          "${workspaceFolder}/app/**/*.spec.ts",
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "protocol": "inspector"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Typescript",
      "program": "${workspaceFolder}/app/group-car.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": ["${workspaceFolder}/build/**/*.js"],
      "env": {
        "NODE_ENV": "development",
        "SERVER_TYPE": "development",
        "DEBUG": "group-car:*",
        "JWT_SECRET": "secret",
        "DB_USERNAME": "groupcartest",
        "DB_PASSWORD": "groupcartest",
        "DB_NAME": "groupcartest",
        "DB_HOSTNAME": "127.0.0.1",
        "DISABLE_SIGN_UP_THROUGH_REQUEST": "true"
      },
      "runtimeArgs": [
        "-r", 
        "tsconfig-paths/register"
      ]
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 5858,
      "address": "localhost",
      "restart": false,
      "sourceMaps": false,
      "localRoot": "${workspaceRoot}",
      "remoteRoot": null
    },
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/build/group-car.js",
      "stopOnEntry": true,
      "args": [],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": null,
      "runtimeExecutable": null,
      "runtimeArgs": [
          "--nolazy",
          "-r", 
          "tsconfig-paths/register"
      ],
      "env": {
          "NODE_ENV": "development"
      },
      "sourceMaps": false,
  }
  ]
}
